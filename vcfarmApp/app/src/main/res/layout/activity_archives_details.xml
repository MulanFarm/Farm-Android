<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_h"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x50"
            android:src="@mipmap/arrow_left" />

        <EditText
            android:id="@+id/textTitle"
            android:layout_width="@dimen/x400"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:gravity="center"
            android:maxLength="10"
            android:maxLines="1"
            android:textColor="@color/textColorWhile"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/textR"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x50"
            android:paddingRight="@dimen/x30"
            android:text="@string/wancheng"
            android:textColor="@color/textColorWhile"
            android:textSize="@dimen/textSize" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y355"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/y20"
        android:paddingLeft="@dimen/x25"
        android:paddingRight="@dimen/x25"
        android:paddingTop="@dimen/y20">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@color/colorAccent" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:src="@color/colorAccent" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginTop="@dimen/y10"
                android:layout_weight="1"
                android:src="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img4"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginBottom="@dimen/y10"
                android:layout_weight="1"
                android:src="@color/colorAccent" />

            <ImageView
                android:id="@+id/img5"
                android:layout_width="match_parent"
                android:layout_height="0px"

                android:layout_weight="1"
                android:src="@color/colorAccent" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutType"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:background="@drawable/select_item_white_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x25"
                android:paddingRight="@dimen/x25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/flag_small"
                    android:drawablePadding="@dimen/x15"
                    android:text="@string/pinzhong"
                    android:textSize="@dimen/y32" />

                <EditText
                    android:id="@+id/textType"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="@color/textColor_"
                    android:textSize="@dimen/y32" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:src="@mipmap/arrow_right" />
            </LinearLayout>

            <com.xcc.mylibrary.widget.LineView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"
                app:fillColor="@color/activityStageBg"
                app:fillLeft="@dimen/x25"
                app:fillRight="@dimen/x25" />

            <LinearLayout
                android:id="@+id/layoutTime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:background="@drawable/select_item_white_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x25"
                android:paddingRight="@dimen/x25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/flag_small"
                    android:drawablePadding="@dimen/x15"
                    android:text="@string/lingyangshijian"
                    android:textSize="@dimen/y32" />

                <TextView
                    android:id="@+id/textTime"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/textColor_"
                    android:textSize="@dimen/y32" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:src="@mipmap/arrow_right" />
            </LinearLayout>

            <com.xcc.mylibrary.widget.LineView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"
                app:fillColor="@color/activityStageBg"
                app:fillLeft="@dimen/x25"
                app:fillRight="@dimen/x25" />

            <LinearLayout
                android:id="@+id/layoutAge"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:background="@drawable/select_item_white_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x25"
                android:paddingRight="@dimen/x25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/flag_small"
                    android:drawablePadding="@dimen/x15"
                    android:text="@string/nianling"
                    android:textSize="@dimen/y32" />

                <EditText
                    android:id="@+id/textAge"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="@color/textColor_"
                    android:textSize="@dimen/y32" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:src="@mipmap/arrow_right" />
            </LinearLayout>

            <com.xcc.mylibrary.widget.LineView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"
                app:fillColor="@color/activityStageBg"
                app:fillLeft="@dimen/x25"
                app:fillRight="@dimen/x25" />

            <LinearLayout
                android:id="@+id/layoutWeight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:background="@drawable/select_item_white_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x25"
                android:paddingRight="@dimen/x25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/flag_small"
                    android:drawablePadding="@dimen/x15"
                    android:text="@string/tizhong_kg"
                    android:textSize="@dimen/y32" />

                <EditText
                    android:id="@+id/textWeight"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="@color/textColor_"
                    android:textSize="@dimen/y32" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:src="@mipmap/arrow_right" />
            </LinearLayout>

            <com.xcc.mylibrary.widget.LineView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"
                app:fillColor="@color/activityStageBg"
                app:fillLeft="@dimen/x25"
                app:fillRight="@dimen/x25" />

            <LinearLayout
                android:id="@+id/layoutHeight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:background="@drawable/select_item_white_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x25"
                android:paddingRight="@dimen/x25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/flag_small"
                    android:drawablePadding="@dimen/x15"
                    android:text="@string/shengaocm"
                    android:textSize="@dimen/y32" />

                <EditText
                    android:id="@+id/textHeight"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="@color/textColor_"
                    android:textSize="@dimen/y32" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:src="@mipmap/arrow_right" />
            </LinearLayout>

            <com.xcc.mylibrary.widget.LineView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"
                app:fillColor="@color/activityStageBg"
                app:fillLeft="@dimen/x25"
                app:fillRight="@dimen/x25" />

            <LinearLayout
                android:id="@+id/layoutLike"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:background="@drawable/select_item_white_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x25"
                android:paddingRight="@dimen/x25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/flag_small"
                    android:drawablePadding="@dimen/x15"
                    android:text="@string/aihao"
                    android:textSize="@dimen/y32" />

                <EditText
                    android:id="@+id/textLike"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="@color/textColor_"
                    android:textSize="@dimen/y32" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:src="@mipmap/arrow_right" />
            </LinearLayout>

            <com.xcc.mylibrary.widget.LineView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"
                app:fillColor="@color/activityStageBg"
                app:fillLeft="@dimen/x25"
                app:fillRight="@dimen/x25" />

            <LinearLayout
                android:id="@+id/layoutHate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:background="@drawable/select_item_white_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x25"
                android:paddingRight="@dimen/x25"
                android:textSize="@dimen/y32">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/flag_small"
                    android:drawablePadding="@dimen/x15"
                    android:text="@string/taoyan"
                    android:textSize="@dimen/y32" />

                <EditText
                    android:id="@+id/textHate"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="@color/textColor_"
                    android:textSize="@dimen/y32" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:src="@mipmap/arrow_right" />
            </LinearLayout>

            <com.xcc.mylibrary.widget.LineView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"
                app:fillColor="@color/activityStageBg"
                app:fillLeft="@dimen/x25"
                app:fillRight="@dimen/x25" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>