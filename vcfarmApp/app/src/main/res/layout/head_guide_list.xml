<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y430">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y430">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y70"
        android:layout_alignParentBottom="true"
        android:background="#50000000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textName"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColor="@color/textColorWhile"
            android:textSize="@dimen/textSize1" />

        <com.xcc.mylibrary.widget.indicaor.FlycoPageIndicaor
            android:id="@+id/indicator"
            android:layout_width="@dimen/x180"
            android:layout_height="match_parent"
            app:fpi_cornerRadius="@dimen/y6"
            app:fpi_gap="@dimen/x10"
            app:fpi_selectColor="#85CD07"
            app:fpi_unselectColor="#9D9D9D" />
    </LinearLayout>
</RelativeLayout>